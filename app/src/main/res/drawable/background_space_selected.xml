<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:bottom="1dp"
        android:left="-2dp"
        android:right="1dp"
        android:top="-2dp">
        <shape android:shape="rectangle" >
            <stroke
                android:width="1dp"
                android:color="@color/border_color"
                />

            <solid android:color="#D5F3F9" />
        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:left="-2dp"
        android:right="4dp"
        android:top="-2dp">
        <shape android:shape="rectangle" >
            <stroke
                android:width="1dp"
                android:color="@color/border_color"
                />
            />

            <solid android:color="#D5F3F9" />
        </shape>
    </item>
</layer-list>